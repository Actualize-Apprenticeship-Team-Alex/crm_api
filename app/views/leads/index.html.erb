<div id="app">
  <section class="charts">
    <div class="container-fluid">
      <header>
        <h1 class="h3">All Leads</h1>
      </header>
      <div class="row">
        <%= form_tag('/leads', method: :get) do %>
          <%= text_field_tag :search %>
          <%= submit_tag "Search" %>
        <% end %>

      </div>

      <div class="row">
        <div class="table-responsive leads-table">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th v-on:click="sort_by_setter('created_at')">Created</th>
                <th v-on:click="sort_by_setter('first_name')">First Name</th>
                <th v-on:click="sort_by_setter('last_name')">Last Name</th>
                <th v-on:click="sort_by_setter('email')">Email</th>
                <th>Phone</th>                
                <th v-on:click="sort_by_setter('appointment_date')">Appointment Date</th>
                <th>Call Converter Notes</th>
              </tr>
            </thead>
            <tbody>
              <tr v-for="lead in sorted_leads">
                <td>{{ moment(lead.created_at).format('dddd MMM Do YYYY, h:mm a') }}</td>
                <td>{{ lead.first_name }}</td>
                <td>{{ lead.last_name }}</td>
                <td><a v-bind:href="'/leads/' + lead.id + '/edit'">{{ lead.email }}</a></td>
                <td>{{ lead.phone }}</td>                
                <td>{{ moment(lead.appointment_date).format('dddd MMM Do YYYY, h:mm a') }}</td>
                <td>{{ lead.notes }}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
</div>

